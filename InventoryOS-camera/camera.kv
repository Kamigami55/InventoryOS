#:kivy 1.10.1
# -*- coding: utf-8 -*-


<MyScreenManager>:
    CameraLayout:
        id: cameralayout
        name: 'cameralayout'
    OptionLayout:
        id: optionlayout
        name: 'optionlayout'


<CameraLayout>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'InventoryOS'
            size_hint_y: None
            height: '100dp'
            font_size: '40dp'
        ToggleButton:
            id: mode_switch
            text: "Borrow mode"
            size_hint_y: None
            height: '150dp'
            font_size: '30dp'
            on_state: root.switchMode()
        Camera:
            id: camera
            resolution: (640, 480)
            play: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '200dp'
            font_size: '50dp'
            on_press: root.capture()


<OptionLayout>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: option1
            text: 'Option1'
            font_size: '50dp'
            on_press: root.select(1)
        Button:
            id: option2
            text: 'Option2'
            font_size: '50dp'
            on_press: root.select(2)
        Button:
            id: option3
            text: 'Option3'
            font_size: '50dp'
            on_press: root.select(3)
        Button:
            id: option4
            text: 'Manually edit'
            font_size: '50dp'
            on_press: root.select(4)

