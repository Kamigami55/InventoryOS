= form_with(model: item, local: true, class: "container") do |form|
  .row
    .col-3
      = image_tag("http://via.placeholder.com/300x300", class: "img-thumbnail")
      %br/
      %br/
      .text-center
        = link_to item do
          %button.btn.btn-secondary
            = fa_icon "arrow-left"
            返回
        = form.button :submit, class: "btn btn-success" do
          = fa_icon "check"
          - if action_name == "new"
            新增
          - else
            更新
      - if item.errors.any?
        #error_explanation
          %h2
            = pluralize(item.errors.count, "error")
            prohibited this item from being saved:
          %ul
            - item.errors.full_messages.each do |message|
              %li= message
      %div{style: "display:none"}= form.text_field :location
      %div{style: "display:none"}= form.number_field :main_image_id
    .col-9
      %table.table.table-bordered.table-light.table-hover
        %thead
          %tr
            %th{style: "width: 20%"} 名稱
            %td{style: "width: 80%"}= form.text_field :name, class: "form-control"
        %tbody
          %tr
            %th 分類
            %td= form.text_field :category, class: "form-control"
          %tr
            %th 擁有人
            %td= select("item", "owner_id", User.all.collect {|u| [ u.name, u.id ] }, {}, {class: "form-control"})

          %tr
            %th 當下狀態
            %td= form.text_field :status, class: "form-control"
          %tr
            %th 使用人
            %td= select("item", "holder_id", User.all.collect {|u| [ u.name, u.id ] }, { include_blank: true }, {class: "form-control"})
          %tr
            %th 詳細資訊
            %td= form.text_area :detail, class: "form-control"
