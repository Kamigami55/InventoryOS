%header.inventory-header
  .container
    %p#notice= notice
    %h1.font-weight-normal.display-3.text-center 庫存 - 列表
    %table.table.table-bordered.table-light.table-hover.table-striped
      %thead.thead-dark
        %tr
          %th
            = fa_icon "image"
            照片
          %th
            = fa_icon "archive"
            物品
          %th
            = fa_icon "sitemap"
            分類
          %th
            = fa_icon "user"
            擁有人
          %th
            = fa_icon "map-marker"
            所在地
          %th
            = fa_icon "user-circle"
            使用人
          %th
            = fa_icon "info-circle"
            詳細資訊
          %th{:colspan => "3"}
            = fa_icon "edit"
            執行操作
      %tbody
        - @items.each do |item|
          %tr
            %td= image_tag(item.item_image.thumb.url || "http://via.placeholder.com/50x50")
            %td= item.name
            %td= item.category
            %td= item.owner.try(:name)
            %td= item.location
            %td= item.holder.try(:name)
            %td= item.detail
            %td
              = link_to item do
                %button.btn.btn-info
                  = fa_icon "search"
              = link_to edit_item_path(item) do
                %button.btn.btn-primary
                  = fa_icon "pencil"
              = link_to item, method: :delete, data: { confirm: '確定要刪除這個物品嗎？' } do
                %button.btn.btn-danger
                  = fa_icon "times"
    %br/
    .text-center
      = link_to new_item_path do
        %button.btn.btn-success.btn-lg
          = fa_icon "plus"
          新增物品
