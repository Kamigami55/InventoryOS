%header.inventory-header
  .container{ style: 'margin-top: 100px' }
    %p#notice= notice
    %h1.display-3.text-center 庫存
    %table.table.table-bordered.table-light.table-hover
      %thead.thead-dark
        %tr
          %th Name
          %th Detail
          %th Status
          %th Location
          %th Owner
          %th Holder
          %th Category
          %th Main image
          %th{:colspan => "3"}
      %tbody
        - @items.each do |item|
          %tr
            %td= item.name
            %td= item.detail
            %td= item.status
            %td= item.location
            %td= item.owner_id
            %td= item.holder_id
            %td= item.category
            %td= item.main_image_id
            %td
              %button.btn.btn-info
                = link_to item do
                  = fa_icon "search"
              %button.btn.btn-primary
                = link_to edit_item_path(item) do
                  = fa_icon "pencil"
              %button.btn.btn-danger
                = link_to item, method: :delete, data: { confirm: 'Are you sure?' } do
                  = fa_icon "times"
    %br/
    .text-center
      %button.btn.btn-success.btn-lg
        = link_to new_item_path do
          = fa_icon "plus"
          新增物品
